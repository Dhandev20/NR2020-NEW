<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004D40"
    android:foregroundGravity="center_vertical|center_horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Waktu"
    tools:ignore="ExtraText">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvbab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/roundedbutton"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="KONVERSI WAKTU"
                android:textColor="#080809"
                android:textSize="25sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_Info"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tvbab"
                android:layout_marginTop="6dp"
                android:background="@drawable/tombolhijau"
                android:gravity="center"
                android:text="Info kalkulator"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="25sp"
                android:visibility="visible" />



            <Button
                android:id="@+id/btn_Hitung"
                android:layout_width="186dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:layout_below="@id/btn_Info"
                android:background="@color/nol"
                android:text="HITUNG"
                android:textAllCaps="false"
                android:textColor="#000309"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_Hapus"
                android:layout_width="186dp"
                android:layout_height="45dp"
                android:layout_marginLeft="189dp"
                android:layout_below="@id/btn_Info"
                android:background="@color/hapus"
                android:text="HAPUS"
                android:textAllCaps="false"
                android:textColor="#000309"
                android:textSize="25sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/in_det"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/btn_Hapus"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/det"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/btn_Hapus"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/in_det"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  sekon "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_men"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/det"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/men"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/det"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_men"
                android:background="#689F38"
                android:fontFamily="@font/nova_mono"
                android:gravity="center|left"
                android:inputType="number"
                android:text=" menit "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_jam"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/men"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/men"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_jam"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  jam "
                android:textColor="#000309"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/in_hari"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/jam"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/hari"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/jam"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_hari"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  hari "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_pk"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/hari"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pk"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/hari"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_bu"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  pekan "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_bu"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/pk"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/bu"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/pk"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_bu"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  bulan "
                android:textColor="#000309"
                android:textSize="25sp" />
            <EditText
                android:id="@+id/in_ta"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/bu"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/ta"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/bu"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_ta"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  tahun "
                android:textColor="#000309"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/komen"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/ta"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center"
                android:inputType="number"
                android:text="Format Tahun bulan   "
                android:textColor="#000309"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/komen1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/komen"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center"
                android:inputType="number"
                android:text=" hari jam menit sekon  "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_tab"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/komen1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tab"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/komen1"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_tab"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  Tahun "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_bub"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/tab"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/bub"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/tab"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_bub"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text=" Bulan "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_pkb"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/bub"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pkb"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/bub"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_pkb"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  Pekan "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_hab"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/pkb"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/hab"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/pkb"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_hab"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  Hari "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_jb"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/hab"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/jb"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/hab"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_jb"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  Jam "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_mb"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/jb"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mb"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/jb"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_tab"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  Menit "
                android:textColor="#000309"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/in_sb"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/mb"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#FCFCFC"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:textColor="#000309"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/sb"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/mb"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/in_bub"
                android:background="#689F38"
                android:fontFamily="serif"
                android:gravity="center|left"
                android:inputType="number"
                android:text="  Sekon "
                android:textColor="#000309"
                android:textSize="25sp" />




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>